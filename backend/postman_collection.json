{
  "info": {
    "name": "DriveEasy Car Rental API",
    "description": "Complete API collection for DriveEasy car rental backend",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000/api",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "item": [
        {
          "name": "Server Health Status",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": ["{{baseUrl}}"],
              "path": ["health"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Cars - Public",
      "item": [
        {
          "name": "Get All Cars",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/cars",
              "host": ["{{baseUrl}}"],
              "path": ["cars"]
            }
          },
          "response": []
        },
        {
          "name": "Get Cars with Filters",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/cars?type=SUV&fuelType=Diesel&minPrice=2000&maxPrice=4000",
              "host": ["{{baseUrl}}"],
              "path": ["cars"],
              "query": [
                {
                  "key": "type",
                  "value": "SUV"
                },
                {
                  "key": "fuelType",
                  "value": "Diesel"
                },
                {
                  "key": "minPrice",
                  "value": "2000"
                },
                {
                  "key": "maxPrice",
                  "value": "4000"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Single Car",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/cars/{{carId}}",
              "host": ["{{baseUrl}}"],
              "path": ["cars", "{{carId}}"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Cars - Admin",
      "item": [
        {
          "name": "Add New Car",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Toyota Fortuner\",\n  \"type\": \"SUV\",\n  \"pricePerDay\": 4200,\n  \"seats\": 7,\n  \"fuelType\": \"Diesel\",\n  \"imageUrl\": \"https://images.pexels.com/photos/1335077/pexels-photo-1335077.jpeg\",\n  \"features\": [\"4WD\", \"Leather Seats\", \"Sunroof\", \"GPS\"]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/admin/cars",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "cars"]
            }
          },
          "response": []
        },
        {
          "name": "Update Car",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"pricePerDay\": 3800,\n  \"available\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/admin/cars/{{carId}}",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "cars", "{{carId}}"]
            }
          },
          "response": []
        },
        {
          "name": "Delete Car",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/admin/cars/{{carId}}",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "cars", "{{carId}}"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Bookings",
      "item": [
        {
          "name": "Create Booking",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userName\": \"Rahul Sharma\",\n  \"userEmail\": \"rahul.sharma@example.com\",\n  \"userPhone\": \"9876543210\",\n  \"carId\": \"{{carId}}\",\n  \"startDate\": \"2024-02-15\",\n  \"endDate\": \"2024-02-18\",\n  \"specialRequests\": \"Need GPS navigation system\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/bookings",
              "host": ["{{baseUrl}}"],
              "path": ["bookings"]
            }
          },
          "response": []
        },
        {
          "name": "Get All Bookings (Admin)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/admin/bookings",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "bookings"]
            }
          },
          "response": []
        },
        {
          "name": "Get Bookings with Filters (Admin)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/admin/bookings?status=confirmed&userEmail=rahul",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "bookings"],
              "query": [
                {
                  "key": "status",
                  "value": "confirmed"
                },
                {
                  "key": "userEmail",
                  "value": "rahul"
                }
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Reviews",
      "item": [
        {
          "name": "Get All Reviews",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/reviews",
              "host": ["{{baseUrl}}"],
              "path": ["reviews"]
            }
          },
          "response": []
        },
        {
          "name": "Get Reviews with Filters",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/reviews?rating=5&verified=true",
              "host": ["{{baseUrl}}"],
              "path": ["reviews"],
              "query": [
                {
                  "key": "rating",
                  "value": "5"
                },
                {
                  "key": "verified",
                  "value": "true"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Add Review",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"reviewerName\": \"Anita Desai\",\n  \"rating\": 5,\n  \"comment\": \"Excellent service! The car was clean and well-maintained. Booking process was seamless and customer support was very helpful. Highly recommended for anyone looking for reliable car rental services.\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/reviews",
              "host": ["{{baseUrl}}"],
              "path": ["reviews"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Newsletter",
      "item": [
        {
          "name": "Subscribe to Newsletter",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"customer@example.com\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/newsletter",
              "host": ["{{baseUrl}}"],
              "path": ["newsletter"]
            }
          },
          "response": []
        }
      ]
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          ""
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          ""
        ]
      }
    }
  ]
}